    link(rel="stylesheet", href="/bootstrap-3.3.7-dist/css/bootstrap.min.css")
  body
    style.
      div.container{margin:0px;}  
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand SPORTDAY
        ul.nav.navbar-nav
          li
            a(href="/") 
